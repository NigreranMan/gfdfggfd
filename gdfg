local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Workspace = game:GetService("Workspace")
local player = game.Players.LocalPlayer

local function moveGoldBar()
    local goldBar = Workspace.RuntimeItems:FindFirstChild("GoldBar")
    if not goldBar then
        print("GoldBar not found!")
        return
    end

    local propGoldBar = goldBar:FindFirstChild("Prop_GoldBar")  -- تم تعديل الاسم هنا
    if not propGoldBar then
        print("Prop_GoldBar not found inside GoldBar!")  -- تم تعديل الاسم هنا
        return
    end

    -- Start Dragging
    local args = {
        [1] = propGoldBar  -- تم تعديل الاسم هنا
    }

    ReplicatedStorage:WaitForChild("Shared"):WaitForChild("Remotes"):WaitForChild("RequestStartDrag"):FireServer(unpack(args))

    -- Find a part inside BountySquare that has a SurfaceGui
    local bountySquare = Workspace.StartingZone.Buildings.TradingPost.BountySquare
    local targetPart = nil

    for _, part in pairs(bountySquare:GetChildren()) do
        if part:IsA("BasePart") and part:FindFirstChild("SurfaceGui") then
            targetPart = part
            break
        end
    end

    if not targetPart then
        print("No part with SurfaceGui found inside BountySquare!")
        return
    end

    -- Move GoldBar to the selected part inside BountySquare
    propGoldBar.CFrame = targetPart.CFrame  -- تم تعديل الاسم هنا
    print("GoldBar moved to the target part inside BountySquare!")
end

-- Run the function when the script starts
moveGoldBar()
