local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Workspace = game:GetService("Workspace")
local player = game.Players.LocalPlayer

local function moveGoldBar()
    -- تحقق من وجود GoldBar في RuntimeItems
    local goldBar = Workspace.RuntimeItems:FindFirstChild("GoldBar")
    if not goldBar then
        print("GoldBar not found!")
        return
    end

    -- تحقق من وجود Prop_GoldBar داخل GoldBar
    local propGoldBar = goldBar:FindFirstChild("Prop_GoldBar")  
    if not propGoldBar then
        print("Prop_GoldBar not found inside GoldBar!")
        return
    end

    -- تحقق من وجود الـ RemoteEvent الخاص بالـ RequestStartDrag
    local requestStartDrag = ReplicatedStorage:WaitForChild("Shared"):WaitForChild("Remotes"):WaitForChild("RequestStartDrag")
    if not requestStartDrag then
        print("RequestStartDrag not found!")
        return
    end

    -- Start Dragging
    local args = {
        [1] = propGoldBar
    }
    requestStartDrag:FireServer(unpack(args))

    -- البحث عن الـ Part داخل BountySquare الذي يحتوي على SurfaceGui
    local bountySquare = Workspace.StartingZone.Buildings.TradingPost.BountySquare
    local targetPart = nil

    -- تحقق من وجود الـ Part داخل BountySquare الذي يحتوي على SurfaceGui
    for _, part in pairs(bountySquare:GetChildren()) do
        if part:IsA("BasePart") and part:FindFirstChild("SurfaceGui") then
            targetPart = part
            break
        end
    end

    if not targetPart then
        print("No part with SurfaceGui found inside BountySquare!")
        return
    end

    -- نقل Prop_GoldBar إلى الـ Part في BountySquare
    propGoldBar.CFrame = targetPart.CFrame
    print("GoldBar moved to the target part inside BountySquare!")
end

-- تنفيذ الدالة عندما يبدأ السكربت
moveGoldBar()
